<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAlertLED"
        xmlns:AlertLED="clr-namespace:AlertLED;assembly=AlertLED" x:Class="TestAlertLED.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <AlertLED:StatusLED x:Name="alertLED" HorizontalAlignment="Left" Height="167" Margin="10,10,0,0" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="btnPulse" Content="Pulse" HorizontalAlignment="Left" Margin="48,182,0,0" VerticalAlignment="Top" Width="75" Click="btnPulse_Click"/>
        <Button x:Name="btnRed" Content="Red" HorizontalAlignment="Left" Margin="48,221,0,0" VerticalAlignment="Top" Width="75" Click="btnRed_Click"/>
        <Button x:Name="btnYellow" Content="Yellow" HorizontalAlignment="Left" Margin="48,261,0,0" VerticalAlignment="Top" Width="75" Click="btnYellow_Click"/>
        <Button x:Name="btnGreen" Content="Green" HorizontalAlignment="Left" Margin="48,305,0,0" VerticalAlignment="Top" Width="75" Click="btnGreen_Click"/>
        <Button x:Name="btnOff" Content="Green" HorizontalAlignment="Left" Margin="48,345,0,0" VerticalAlignment="Top" Width="75" Click="btnOff_Click"/>
        <AlertLED:StatusLED x:Name="alertLED_Copy" HorizontalAlignment="Left" Height="167" Margin="259,10,0,0" VerticalAlignment="Top" Width="202" RenderTransformOrigin="0.5,0.5">
            <AlertLED:StatusLED.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </AlertLED:StatusLED.RenderTransform>
        </AlertLED:StatusLED>

    </Grid>
</Window>

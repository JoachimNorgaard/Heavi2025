<Window x:Class="HEAVI.ApplicationClosed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HEAVI"
        mc:Ignorable="d"
        Title="ApplicationClosed" Height="1080" Width="1920" MouseDoubleClick="Window_MouseDoubleClick" Background="Black" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard x:Key="AnimateMoon" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="image">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0.9"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="0.85"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.1" Value="0.95"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.2" Value="0.85"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.4" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="0.9"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource AnimateMoon}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="531*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="580*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="GFX/nightsky.png"/>
        </Grid.Background>
        <local:ShadowTextBlock Margin="0,113.371,0,146.628" Foreground="White" Text="H.E.A.V.I. siger tak for i dag" FontSize="64" Height="99" Grid.Column="1" Width="Auto" Grid.Row="1" d:LayoutOverrides="VerticalAlignment"/>
        <local:ShadowTextBlock Margin="136,28,138,452" Foreground="White" Text="Kom igen i morgen til mere sjov og gratis øl" FontSize="64" Height="Auto" Width="Auto" Grid.Row="2" Grid.ColumnSpan="3"/>
        <Image x:Name="image" Grid.Column="1" HorizontalAlignment="Left" Margin="-98.656,48.741,0,-87.266" Width="228.266" Source="GFX/Moon.png"/>
        <local:ShadowTextBlock Margin="136,250,14,10" Foreground="White" Text="I vejede 10 tons" FontSize="48" Height="99" Width="Auto" Grid.Row="1" Grid.ColumnSpan="2"/>

    </Grid>
</Window>

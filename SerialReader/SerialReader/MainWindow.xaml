<Window x:Class="SerialReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialReader"
        mc:Ignorable="d"
        Title="COM municator" Height="500" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="OutputTextBox"
             VerticalScrollBarVisibility="Auto"
             TextWrapping="Wrap"
             IsReadOnly="True"
             Height="320"
             
             FontFamily="Consolas"
             FontSize="15"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="125"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="OutputTextBox2" 
                    Grid.Column="0"
                    Text="US,GS,+00014.5kg\r\nUS,GS,+00015.0kg\r\nUS,GS,+00015.0kg\r\nUS,GS,+00015.5kg\r\nUS,GS,+00015.5kg\r"                     
                    Height="30" 
                    FontSize="15" />

                <TextBox Name="InputTextBox" 
    Grid.Column="0"
    Text="US,GS,+00014.5kg\r\nUS,GS,+00015.0kg\r\nUS,GS,+00015.0kg\r\nUS,GS,+00015.5kg\r\nUS,GS,+00015.5kg\r"                     
    Height="30" 
    FontSize="15" />

                <Button Name="MyButton" 
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Margin="10,10" 
                    Height="30"
                    Width="100"
                    Content="Send" 
                    Click="Button_Click"/>
                
                <Button Name="MyButtonTimer" 
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Margin="10,10" 
                    Height="30"
                    Width="100"
                    Content="Timer" Click="MyButtonTimer_Click" 
                />
            </Grid>
        </StackPanel>



       

    </Grid>
</Window>
